    "emoji-picker-react": "^4.18.0",
    "iron-session": "^8.0.4",
    "lucide-react": "^0.574.0",
    "motion": "^12.34.2",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "resend": "^6.9.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "vaul": "^1.1.2",
